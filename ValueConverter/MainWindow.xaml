<Window x:Class="ValueConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValueConverter"
        mc:Ignorable="d"
        Title="Конвертация валют"  MinHeight="720" MinWidth="1280" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="350" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <Border BorderBrush="Black" BorderThickness="2" Grid.Row="4" Grid.ColumnSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="250" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Center"  Grid.Row="1" Text="текст" />
                <TextBox Text="1000" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <Border BorderBrush="Black" BorderThickness="2" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="250" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Center"  Grid.Row="1" Text="текст"/>
                <TextBox Text="100" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        <Button Grid.Column="2" Grid.Row="4" Height="250">
            <Button.Background>
                <ImageBrush ImageSource="\Resources\Icons\exchange.png"/>
            </Button.Background>
        </Button>
        
    <!--#region грид даты -->
        <Grid Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
        <TextBlock Text="Данные за......" Grid.Column="1" Grid.Row="1"/>
        </Grid>
    <!--#endregion-->

        <ComboBox Grid.ColumnSpan="2" Grid.Row="2" Grid.Column="0"/>
        <ComboBox Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2"/>
        
        <TextBlock Grid.Row="0" Text="У меня есть"/>
        <TextBlock Grid.Row="0" Grid.Column="3" Text="Хочу приобрести"/>
    </Grid>
</Window>
